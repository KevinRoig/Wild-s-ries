{% extends 'base.html.twig' %}
{% block title %}Episode #{{ episode.number }}{% endblock %}

{% block body %}
<div>
  <h1>{{ program.title }}</h1>
</div>
  <div>
    Season number : {{season.number}} <br><br>
   </div>
  <div>
    <div>Episode number : {{ episode.number }}</div>
    <div><b>Title : {{ episode.title }}</b></div>
    <div>Synopsis : {{ episode.synopsis}}</div>
    <br><br>
</div>
<div>
  {% if is_granted('ROLE_CONTRIBUTOR') %}
    {{form_start(form) }}
      {{ form_widget(form)}}
      <input type="submit" value="Add your comment">
    {{ form_end(form) }}
  {% endif %}  
</div>
<div>
  <h3>Comments</h3>
  {% for comment in comments %}
    {{ comment.author.username }} said : {{ comment.comment}}. I rate it {{ comment.rate }}/5.
    <br>
  {% endfor %}
</div>
<div>
  <a href="{{ path("program_show", { slug: program.slug }) }}">Retour à la série</a>
</div>
<div>
<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>
</div>

{% endblock %}